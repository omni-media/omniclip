	"name": "omniclip",
	"version": "2.0.0-4",
	"description": "",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"type": "module",
	"scripts": {
		"build": "rm -rf x && mkdir x && run-s _coi _code _ssg _ln",
		"start": "run-p _http _turtle",
		"test": "exit 0",
		"count": "find s -path '*/mp4boxjs' -prune -o -path '*/icons' -prune -o -name '*.mp4' -prune -o -name 'pixi.mjs.d.ts' -prune -o -name '*.ts' -exec wc -l {} +",
		"_coi": "cp node_modules/coi-serviceworker/coi-serviceworker.js x/",
		"_code": "turtle build --out=x",
		"_ssg": "turtle ssg --in=s,x --out=x",
		"_http": "http-server x",
		"_turtle": "turtle watch --in=s,x --out=x -v",
		"_ln": "run-s _ln-s _ln-assets",
		"_ln-s": "ln -s \"$(realpath s)\" x/s",
		"_ln-assets": "ln -s \"$(realpath assets)\" x/assets"
	},
